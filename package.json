{
  "name": "sao",
  "version": "0.0.0",
  "description": "Futuristic scaffolding tool âš”",
  "repository": {
    "url": "https://github.com/saojs/sao.git",
    "type": "git"
  },
  "main": "lib/index.js",
  "bin": "bin/cli.js",
  "files": [
    "lib",
    "bin",
    "!**/__test__/**"
  ],
  "scripts": {
    "test": "npm run lint && ava",
    "lint": "xo"
  },
  "author": "egoist <0x142857@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "cac": "^5.0.15",
    "chalk": "^2.4.1",
    "conf": "^2.0.0",
    "cross-spawn": "^6.0.5",
    "download-git-repo": "^1.1.0",
    "fs-extra": "^7.0.0",
    "hash-sum": "^1.0.2",
    "ini": "^1.3.5",
    "inquirer": "^6.2.0",
    "joycon": "^2.1.2",
    "jstransformer": "^1.0.0",
    "jstransformer-ejs": "^0.2.0",
    "majo": "^0.6.2",
    "micromatch": "^3.1.10",
    "ora": "^3.0.0",
    "parse-package-name": "^0.1.0",
    "resolve-from": "^4.0.0",
    "strip-ansi": "^5.0.0",
    "update-notifier": "^2.5.0",
    "wcwidth": "^1.0.1",
    "yarn-global": "^1.1.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "cz-conventional-changelog": "2.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-rem": "^3.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "semantic-release": "^15.10.7",
    "xo": "^0.18.0"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-await-in-loop": "off",
      "unicorn/filename-case": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint --fix",
      "git add"
    ]
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "sao",
    "generator",
    "egoist",
    "yeoman",
    "template",
    "scaffold",
    "automation",
    "kirito",
    "simple",
    "easy",
    "workflow"
  ]
}
