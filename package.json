  },
  "main": "dist/index.js",
  "bin": "cli.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "/cli.js",
    "!**/*.test.ts"
  ],
  "scripts": {
    "test": "npm run lint && npm run build && jest",
    "build": "rm -rf dist && tsup src/index.ts --dts",
