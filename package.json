    "prepublishOnly": "npm run build",
    "sao": "ts-node src/cli.ts",
    "typedoc.g": "typedoc src/index.ts --readme none --mode file --out docs/typedoc --excludePrivate --excludeNotExported --theme minimal",
    "release": "shipjs prepare"
  },
